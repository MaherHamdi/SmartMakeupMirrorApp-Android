<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SmartMakeupMirrorApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/custom_color_primary</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="Theme.SmartMakeupMirrorApp.SplashScreen" parent="Theme.SplashScreen" >
        <item name="windowSplashScreenBackground">@color/custom_color_primary</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/logo</item>
        <item name="postSplashScreenTheme">@style/Theme.SmartMakeupMirrorApp</item>


    </style>

    <style name="nightModeSwitch" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/night_mode</item>
        <item name="colorSwitchThumbNormal">#6FFFFFFF</item>
        <item name="android:colorForeground">#6FFFFFFF</item>
    </style>

    <style name="notificationSwitch" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/notifications</item>
        <item name="colorSwitchThumbNormal">#6FFFFFFF</item>
        <item name="android:colorForeground">#6FFFFFFF</item>
    </style>

    <style name="securitySwitch" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/security</item>
        <item name="colorSwitchThumbNormal">#6FFFFFFF</item>
        <item name="android:colorForeground">#6FFFFFFF</item>
    </style>
    <style name="privateSwitch" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/private_account</item>
        <item name="colorSwitchThumbNormal">#6FFFFFFF</item>
        <item name="android:colorForeground">#6FFFFFFF</item>
    </style>


</resources>